<%= simple_form_for(@pool) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :password %>
    <%= f.input :password_confirmation, label: 'Repeat Password' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<div class="page-header">
  <h1><%= @pool.name %></h1>
</div>

<p id="notice"><%= notice %></p>

<ul class="thumbnails">
  <%- @games.each do |game| %>
    <%= render 'game', locals: { game: game } %>
  <%- end %>
</ul>

<div id="game-details-modal" class="modal hide">
  <div class="modal-header">
    <button class="close" data-dismiss="modal">x</button>
  </div>
  <div class="modal-body"></div>
</div>

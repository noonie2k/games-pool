<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :username %>
    <%= f.input :email %>
    <%= f.input :name %>
    <%= f.input :password %>
    <%= f.input :password_confirmation, label: 'Repeat Password' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Register', class: 'btn-primary' %>
  </div>
<% end %>

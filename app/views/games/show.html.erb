<%- model_class = Game -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @game.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:platform_id) %>:</strong></dt>
  <dd><%= @game.platform_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:img_thumb_url) %>:</strong></dt>
  <dd><%= @game.img_thumb_url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:img_tiny_url) %>:</strong></dt>
  <dd><%= @game.img_tiny_url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:owner_id) %>:</strong></dt>
  <dd><%= @game.owner_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              games_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_game_path(@game), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              game_path(@game),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
